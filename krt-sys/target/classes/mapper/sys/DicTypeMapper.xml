<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.krt.sys.mapper.DicTypeMapper">

    <sql id="Base_Column_List">
        id,code,name,remark,sort,inserter,insert_time,updater,update_time
    </sql>

    <!-- 分页 -->
    <select id="selectPageList" resultType="com.krt.sys.entity.DicType">
        select id,code,name,remark,sort from sys_dic_type where 1=1
        <if test="code!=null and code!=''">
            and code=#{code}
        </if>
        <if test="name!=null and name!=''">
            and name like concat('%',#{name},'%')
        </if>
    </select>

</mapper>

