body{background-image:url("../img/bg_login.svg");background-position:center 110px;background-repeat:no-repeat;background-size:100%;background-color:#f0f2f5}.box-body{padding:25px}.input-group .form-control{height:38px;border-radius:0}.input-group .input-group-addon{background:#fbfbfb;padding:10px 15px;border-radius:0}.login-wrapper,body,html{height:100%}.login-wrapper{overflow:auto;position:absolute;top:0;bottom:0;left:0;right:0}.login-header img{height:40px}.login-header{text-align:center;padding:30px 10px 0 10px}.login-body{padding:20px 10px 40px 10px}.login-body>.box{max-width:360px;margin:0 auto}.login-body .box-header{color:#666;font-size:16px}.login-body .login-captcha{width:100%;height:38px;cursor:pointer}.login-body .login-other>*{display:inline-block;vertical-align:middle;margin-right:10px;font-size:14px}.login-body .login-other .fa{position:relative;top:2px;font-size:26px}.login-body .login-other a:hover{opacity:.8}.login-footer{text-align:center;line-height:30px;color:rgba(0,0,0,0.7)!important;padding-bottom:20px}.login-footer span{padding:0 5px}.login-footer a{padding:0 5px;color:rgba(0,0,0,0.7)!important}.login-footer a:hover{color:#1e9fff!important}.krt-login-logo{height:44px;vertical-align:top;margin-right:10px;margin-bottom:20px}.login-title{font-size:30px;color:rgba(0,0,0,.75);font-family:Avenir,Helvetica Neue,Arial,Helvetica,sans-serif;font-weight:600;position:relative;top:2px}.login-info{font-size:14px;color:rgba(0,0,0,.45)}@media screen and (min-height:590px){.login-footer{position:absolute;bottom:0;width:100%}}@media screen and (min-height:670px){.login-body{padding:20px 10px 40px 10px}}@media(min-width:768px){.login-header{text-align:center;padding:110px 10px 0 10px}.login-body>.box{max-width:420px;margin:0 auto}.box-body{padding:20px 55px}}